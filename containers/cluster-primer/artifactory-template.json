{
   "kind": "List",
   "apiVersion": "v1",
   "metadata": {
      "name": "artifactory"
   },
   "items": [
      {
         "kind": "Template",
         "apiVersion": "v1",
         "metadata": {
            "name": "artifactory",
            "annotations": {
               "description": "repository for maven artifacts",
               "iconClass": "icon-shadowman",
               "tags": "instant-app,artifactory,maven,java"
            }

         },
         "labels": {
            "application": "artifactory",
            "createdBy": "artifactory-template"
         },
         "parameters": [
            {
               "description": "The name for the application.",
               "name": "APPLICATION_NAME",
               "value": "artifactory",
               "displayName": "Application name",
               "required": true
            }
         ],
         "objects": [
            {
               "kind": "ImageStream",
               "apiVersion": "v1",
               "metadata": {
                  "name": "${APPLICATION_NAME}"
               },
               "spec": {
                  "dockerImageRepository": "fkirill/artifactory",
                  "tags": [
                     {
                        "name": "latest"
                     }
                  ]
               }
            },
            {
               "kind": "DeploymentConfig",
               "apiVersion": "v1",
               "metadata": {
                  "name": "${APPLICATION_NAME}"
               },
               "spec": {
                  "strategy": {
                     "type": "Rolling",
                     "rollingParams": {
                        "updatePeriodSeconds": 1,
                        "intervalSeconds": 1,
                        "timeoutSeconds": 600
                     },
                     "resources": {}
                  },
                  "triggers": [
                     {
                        "type": "ConfigChange"
                     },
                     {
                        "type": "ImageChange",
                        "imageChangeParams": {
                           "automatic": true,
                           "containerNames": [
                              "${APPLICATION_NAME}"
                           ],
                           "from": {
                              "kind": "ImageStreamTag",
                              "name": "${APPLICATION_NAME}:latest"
                           }
                        }
                     }
                  ],
                  "replicas": 1,
                  "selector": {
                     "deploymentconfig": "${APPLICATION_NAME}"
                  },
                  "template": {
                     "metadata": {
                        "labels": {
                           "deploymentconfig": "${APPLICATION_NAME}"
                        }
                     },
                     "spec": {
                        "containers": [
                           {
                              "name": "${APPLICATION_NAME}",
                              "image": "${APPLICATION_NAME}",
                              "ports": [
                                 {
                                    "containerPort": 8080,
                                    "protocol": "TCP"
                                 }
                              ],
                              "volumeMounts" : [
                                 {
                                    "mountPath" : "/artifactory/data",
                                    "name" : "data"
                                 }
                              ],
                              "livenessProbe": {
                                 "tcpSocket": {
                                    "port": 8080
                                 },
                                 "initialDelaySeconds": 30,
                                 "timeoutSeconds": 1
                              },
                              "resources": {},
                              "terminationMessagePath": "/dev/termination-log",
                              "imagePullPolicy": "IfNotPresent",
                              "securityContext": {
                                 "capabilities": {},
                                 "privileged": false
                              }
                           }
                        ],
                        "volumes" : [
                           {
                             "name" : "data",
                             "persistentVolumeClaim" : { "claimName" : "${APPLICATION_NAME}" }
                           }
                        ],
                        "restartPolicy": "Always",
                        "dnsPolicy": "ClusterFirst"
                     }
                  }
               }
            },
            {
               "kind": "Service",
               "apiVersion": "v1",
               "metadata": {
                  "name": "${APPLICATION_NAME}"
               },
               "spec": {
                  "ports": [
                     {
                        "name": "${APPLICATION_NAME}-http",
                        "port": 8080,
                        "targetPort": 8080
                     }
                  ],
                  "selector": {
                     "deploymentconfig": "${APPLICATION_NAME}"
                  },
                  "type": "ClusterIP",
                  "sessionAffinity": "None"
               }
            }
         ]
      }
   ]
}
